// https://github.com/microsoft/vscode-remote-try-python/blob/main/.devcontainer/devcontainer.json
// https://containers.dev/implementors/json_reference/
// Dev Containers: Reopen in Container
{
  "name": "Python",
  "image": "ghcr.io/seyoungsong/selenium:dev",
  "remoteEnv": {
    "DISPLAY": "host.docker.internal:0" // Windows 10: VcXsrv XLaunch
  },
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "zsh",
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.formatting.provider": "black"
      },
      // code --list-extensions > temp.txt
      "extensions": [
        "bierner.markdown-preview-github-styles",
        "codezombiech.gitignore",
        "esbenp.prettier-vscode",
        "foxundermoon.shell-format",
        "ms-azuretools.vscode-docker",
        "ms-ceintl.vscode-language-pack-ko",
        "ms-python.python",
        "redhat.vscode-yaml",
        "yzhang.markdown-all-in-one"
      ]
    }
  }
}
